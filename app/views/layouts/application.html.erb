<!DOCTYPE html>
<html>
	<head>
		<title>RailsProject</title>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<%= render "static_pages/nav" %>
		<div class = "container">
			<div class = "row">
				<% if notice %>
				<div id ="fade" class="col-md-4 col-md-offset-4 alert alert-info text-center">
					<%= notice %>
				</div>
				<% end %>
				<% if alert %>
				<div id ="fade" class="col-md-4 col-md-offset-4 alert alert-danger text-center">
					<%= alert %>
				</div>
			<% end %>
			</div>
			<%= yield %>
		</div>
		<%= render "static_pages/footer" %>
	</body>
</html>
