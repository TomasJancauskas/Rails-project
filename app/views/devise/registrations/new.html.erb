<div class ="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="panel-body">
				<h3 class="text-center"> SIGN UP</h3>
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
						<% if resource.errors.messages[:email].to_s.length == 0 %>
						<%= f.email_field :email, :autofocus => true, :class => 'form-control input-lg', :placeholder => "Email" %>
						<%else%>
						<%= f.email_field :email, :autofocus => true, :class => 'form-control input-lg alert-danger', :value => '', :placeholder => "Email " + resource.errors.messages[:email].join(" ") %>
						<%end%>
					</div>
				</div>

				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon"><span class="glyphicon glyphicon-link"></span></span>
						<% if resource.errors.messages[:password].to_s.length == 0 %>
						<%= f.password_field :password, :class => 'form-control input-lg', :placeholder => "Password" %>
						<%else%>
						<%= f.password_field :password, :class => 'form-control input-lg alert-danger', :value => '', :placeholder => resource.errors.messages[:password].join(" ") %>
						<%end%>
					</div>
				</div>
				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon"><span class="glyphicon glyphicon-link"></span></span>
												<% if resource.errors.messages[:password_confirmation].to_s.length == 0 %>
						<%= f.password_field :password_confirmation, :class => 'form-control input-lg', :placeholder => "Confirm password" %>
												<%else%>
																		<%= f.password_field :password_confirmation, :class => 'form-control input-lg alert-danger', :value => '', :placeholder => "Passwords do not match" %>
																								<%end%>
					</div>
				</div>

				<div>
					<%= f.submit "Sign up", :class => "btn btn-lg btn-success btn-block"%>
				</div>
				<!--<%= render "devise/shared/links" %> -->
				<% end %>
			</div>
		</div>
	</div>
</div>

